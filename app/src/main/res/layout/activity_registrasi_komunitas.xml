<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrasiKomunitas"
    android:theme="@style/FormLayout"
    android:background="@color/putih">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/questrial"
                android:text="@string/regis_komunitas"
                android:textColor="@color/bgcolor"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/image2" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/nama_komunitas">

                <EditText
                    android:id="@+id/edit_namakomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:inputType="text"
                    android:textColor="@color/bgcolor"
                    android:textColorHint="@color/bgcolor" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/radioJenisUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/jenisUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis User"
                    android:textColor="@color/bgcolor"
                    android:textSize="20sp"/>

                <RadioButton
                    android:id="@+id/radioDonatur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/bgcolor"
                    android:text="@string/donatur"
                    android:textColor="@color/bgcolor"
                    android:textSize="18sp"/>

                <RadioButton
                    android:id="@+id/radioKomunitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/bgcolor"
                    android:text="@string/komunitas"
                    android:textColor="@color/bgcolor"
                    android:textSize="18sp"/>
            </RadioGroup>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/address">

                <EditText
                    android:id="@+id/edit_alamatkomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:inputType="textMultiLine"
                    android:textColor="@color/bgcolor"
                    android:textColorHint="@color/bgcolor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/description">

                <EditText
                    android:id="@+id/edit_deskripsi_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:inputType="textMultiLine"
                    android:textColor="@color/bgcolor"
                    android:textColorHint="@color/bgcolor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/phone_number">

                <EditText
                    android:id="@+id/edit_notelpkomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:inputType="phone"
                    android:textColor="@color/bgcolor"
                    android:textColorHint="@color/bgcolor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/email">

                <EditText
                    android:id="@+id/edit_emailkomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/questrial"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/bgcolor"
                    android:textColorHint="@color/bgcolor" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="@string/member">

                <EditText
                    android:id="@+id/edit_memberkomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/bgcolor"
                    android:inputType="text"
                    android:textColor="@color/bgcolor"
                    android:fontFamily="@font/questrial"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/bgcolor"
                android:hint="@string/password">

                <EditText
                    android:id="@+id/edit_passwordkomunitas_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/bgcolor"
                    android:inputType="textPassword"
                    android:textColor="@color/bgcolor"
                    android:fontFamily="@font/questrial"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_regiskomunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/background_btn_rounded"
                android:text="@string/register"
                android:backgroundTint="@color/bgcolor"
                android:textColor="@color/putih"
                />

            <ProgressBar
                android:id="@+id/progress_regiskom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>